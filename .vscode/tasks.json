{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-tests",
            "type": "shell",
            "command": "mkdir -p ${workspaceFolder}/tests/build && cmake -DCMAKE_BUILD_TYPE=Debug .. && make -j4",
            "options": {
                "cwd": "${workspaceFolder}/tests/build"
            },
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": [
                    "absolute"
                ]
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}